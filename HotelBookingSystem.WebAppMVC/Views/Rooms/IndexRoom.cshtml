@model IEnumerable<HotelBookingSystem.DAL.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}
<h2>Rooms</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aircondition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Minibar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Television)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aircondition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Minibar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Television)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.HotelName)
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.RoomId">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.RoomId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.RoomId">Delete</a> |
                <a asp-controller="Bookings" asp-action="Create" asp-route-id="@item.RoomId">Book</a>
            </td>
        </tr>
        }
    </tbody>
</table>
